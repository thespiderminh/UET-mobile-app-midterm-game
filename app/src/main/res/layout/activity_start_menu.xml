<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StartMenu">

    <ImageButton
        android:id="@+id/btPlay"
        android:layout_width="324dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="391dp"
        android:layout_marginBottom="88dp"
        android:background="@null"
        android:contentDescription="@string/todo1"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btSetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play_button" />

    <ImageButton
        android:id="@+id/btContact"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginEnd="44dp"
        android:background="@null"
        android:contentDescription="@string/todo2"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btSetting"
        app:layout_constraintTop_toBottomOf="@+id/btPlay"
        app:layout_constraintVertical_bias="0.645"
        app:srcCompat="@drawable/contact_button" />

    <ImageButton
        android:id="@+id/btSetting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="49dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btPlay"
        app:srcCompat="@drawable/setting_button"
        android:contentDescription="@string/todo3" />


</androidx.constraintlayout.widget.ConstraintLayout>