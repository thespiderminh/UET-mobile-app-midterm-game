<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingMenu">

    <SeekBar
        android:id="@+id/seVolume"
        style="@android:style/Widget.DeviceDefault.Light.SeekBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="14dp"
        android:max="5"
        android:progress="3"
        app:layout_constraintBottom_toBottomOf="@+id/imVolume"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imVolume"
        app:layout_constraintTop_toTopOf="@+id/imVolume"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/imVolume"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/imGameMode"
        app:layout_constraintEnd_toStartOf="@+id/seVolume"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volume_icon"
        android:contentDescription="@string/todo9" />

    <ImageView
        android:id="@+id/imGameMode"
        android:layout_width="88dp"
        android:layout_height="0dp"
        android:layout_marginBottom="278dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imVolume"
        app:layout_constraintTop_toBottomOf="@+id/imVolume"
        app:srcCompat="@drawable/game_mode"
        android:contentDescription="@string/todo10" />

</androidx.constraintlayout.widget.ConstraintLayout>